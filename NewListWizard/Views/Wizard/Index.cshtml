    @model IEnumerable<NewListWizard.Models.WizardList>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="placeHolder"></div>
@*<p>
    <a asp-action="CreateNewList" asp-controller="Wizard" class="btn btn-success button2">Create new List</a>
</p>*@
<p>
    <a id="wizList"  class="btn btn-success button2" onclick="showInPopup('@Url.Action("CreateNewListPartial","Wizard",null,Context.Request.Scheme)','New List Wizard')" >Create new List</a>
</p>

<table class="table table-bordered" id="gridView" border="1">
    <thead>
        <tr>
            <th>
                  <input type="checkbox" id="checkBoxAll" />
            </th>
            <th>
                        ListName
            </th>
            <th>
                        Assigned to
            </th>
            <th>
                        Created Date
            </th>
            <th>
                        Modified Date
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @using(Html.BeginForm("Delete" , "Wizard" , FormMethod.Post)){
            <input type="submit" value="Delete" onclick="return confirm('are you sure?')" class="btn btn-primary bg-danger"/>
            @foreach (var item in Model) {
        <tr>
            <td>
                <input type="checkbox" class="checkBoxId"  name="listId" value='@item.ListId'/>
              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>

            
        </tr>
}
}
    </tbody>
</table>

