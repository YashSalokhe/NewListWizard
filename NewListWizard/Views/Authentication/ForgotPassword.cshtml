@model NewListWizard.Models.ForgotPasswordViewModel;
@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>Login</h1>
<h4>@ViewBag.Message</h4>
    <div class="align-content-md-center">
        <section>
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>

                  <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Send Email</button>
                </div>
                </form>
                </section>
                </div>
